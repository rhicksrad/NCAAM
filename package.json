{
  "name": "ncaam-hub",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "clean": "rm -rf public/scripts",
    "prepare:logos": "node scripts/ensure-ncaa-logos.mjs",
    "build:ts": "tsc -p tsconfig.json",
    "build:pages": "node scripts/dev/ensure-pages.mjs",
    "scrape:cbb:index": "tsx scripts/scrape/cbb_index.ts",
    "scrape:cbb:players": "tsx scripts/scrape/cbb_player_stats.ts",
    "scrape:cbb:validate": "tsx scripts/scrape/cbb_validate.ts",
    "build:data:bbr": "pnpm run scrape:cbb:index && pnpm run scrape:cbb:players && pnpm run scrape:cbb:validate",
    "build:data": "(python3 scripts/build_site.py || true)",
    "build:sitemap": "node scripts/build_sitemap.mjs || true",
    "build": "pnpm run clean && pnpm run prepare:logos && pnpm run build:ts && pnpm run build:pages && pnpm run build:data && pnpm run build:sitemap",
    "dev": "node scripts/dev/serve-public.js"
  },
  "dependencies": {
    "cheerio": "1.0.0-rc.12",
    "d3": "^7.9.0",
    "undici": "^7.16.0",
    "yaml": "2.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.35",
    "@types/d3": "^7.4.3",
    "@types/node": "20.12.7",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "unzipper": "^0.12.3",
    "vite": "^5.4.0",
    "vitest": "1.4.0"
  }
}
