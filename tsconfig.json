{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "scripts/**/*.ts",
    "content/**/*.ts",
    "scripts/tests/**/*.ts",
    "assets/**/*.ts",
    "types/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
